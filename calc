#!/usr/bin/env python

from sys import argv
import calcm # calc module

help_prompt = f'''
 Usage: {argv[0]} "2 + 2"

 Use spaces to separate operators from operands (optional for parentheses)

'''

if len(argv) == 1 or argv[1] == 'help' or argv[1] == '--help' or argv[1] == '-h':
    exit(help_prompt)

exp = calcm.parser(argv[1])

exp = calcm.calc(exp)

if exp == int(exp):
    print(int(exp))
else:
    print(exp)